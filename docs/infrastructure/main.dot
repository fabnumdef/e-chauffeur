            ingressAPI;
            ingressDashboard;
            ingressDriver;
            ingressUser;
        }
        {
            rank=same;
            serviceAPI;
            serviceDashboard;
            serviceDriver;
            serviceUser;
            serviceMongoDB;
        }
    }
    loadbalancer -> ingressController;

}
